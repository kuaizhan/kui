{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "ES5",
        "jsx": "react",
        "esModuleInterop": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "packages/*": ["packages/*"]
        }
    },
    "include": [
        "types/*.ts",
        "./"
    ],
    "exclude": [
        "node_modules"
    ]
}